bindsym $mod+l focus up ; exec --no-startup-id /home/ahmetemre/scripts/move-cursor-to-focused
bindsym $mod+semicolon focus right ; exec --no-startup-id /home/ahmetemre/scripts/move-cursor-to-focused

# alternatively, you can use the cursor keys:

bindsym $mod+Right focus right ; exec --no-startup-id /home/ahmetemre/scripts/move-cursor-to-focused

# move focused window
bindsym $mod+Shift+j move left ; exec --no-startup-id /home/ahmetemre/scripts/move-cursor-to-focused
